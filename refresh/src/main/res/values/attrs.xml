<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="drawableSize" format="dimension"/><!--图片尺寸-->
    <attr name="drawableArrowSize" format="dimension"/><!--箭头图片尺寸-->
    <attr name="drawableProgressSize" format="dimension"/><!--箭头图片尺寸-->
    <attr name="drawableMarginRight" format="dimension"/><!--图片和文字的间距-->
    <attr name="textSizeTitle" format="dimension"/><!--标题字体-->
    <attr name="textSizeTime" format="dimension"/><!--时间字体-->
    <attr name="finishDuration" format="integer"/><!--完成时停留时间-->
    <attr name="primaryColor" format="color"/><!--主要颜色-->
    <attr name="accentColor" format="color"/><!--强调颜色-->
    <attr name="drawableArrow" format="reference"/><!--箭头图片-->
    <attr name="drawableProgress" format="reference"/><!--转动图片-->
    <attr name="enableHorizontalDrag" format="boolean"/><!--支持水平拖动-->

    <attr name="classicsSpinnerStyle" format="enum">
        <enum name="Translate" value="0"/><!--平行移动-->
        <enum name="Scale" value="1"/><!--拉伸形变-->
        <enum name="FixedBehind" value="2"/><!--固定在背后-->
    </attr>

    <attr name="layout_spinnerStyle" format="enum">
        <enum name="Translate" value="0"/><!--平行移动-->
        <enum name="Scale" value="1"/><!--拉伸形变-->
        <enum name="FixedBehind" value="2"/><!--固定在背后-->
        <enum name="FixedFront" value="3"/><!--固定在前面-->
        <enum name="MatchLayout" value="4"/><!--填满布局-->
    </attr>

    <declare-styleable name="RefreshLayout">
        <attr name="primaryColor"/>
        <attr name="accentColor"/>
        <attr name="reboundDuration" format="integer"/>
        <attr name="headerHeight" format="dimension"/>
        <attr name="footerHeight" format="dimension"/>
        <attr name="headerInsetStart" format="dimension"/>
        <attr name="footerInsetStart" format="dimension"/>
        <attr name="dragRate" format="float"/>
        <attr name="headerMaxDragRate" format="float"/>
        <attr name="footerMaxDragRate" format="float"/>
        <attr name="headerTriggerRate" format="float"/>
        <attr name="footerTriggerRate" format="float"/>
        <attr name="enableRefresh" format="boolean"/>
        <attr name="enableLoadMore" format="boolean"/>
        <attr name="enableHeaderTranslationContent" format="boolean"/>
        <attr name="enableFooterTranslationContent" format="boolean"/>
        <attr name="headerTranslationViewId" format="reference"/>
        <attr name="footerTranslationViewId" format="reference"/>
        <attr name="enablePreviewInEditMode" format="boolean"/>
        <attr name="enableAutoLoadMore" format="boolean"/>
        <attr name="enableOverScrollBounce" format="boolean"/>
        <attr name="enablePureScrollMode" format="boolean"/>
        <attr name="enableNestedScrolling" format="boolean"/>
        <attr name="enableScrollContentWhenLoaded" format="boolean"/>
        <attr name="enableScrollContentWhenRefreshed" format="boolean"/>
        <attr name="enableLoadMoreWhenContentNotFull" format="boolean"/>
        <attr name="enableFooterFollowWhenLoadFinished" format="boolean"/>
        <attr name="enableClipHeaderWhenFixedBehind" format="boolean"/>
        <attr name="enableClipFooterWhenFixedBehind" format="boolean"/>
        <attr name="enableOverScrollDrag" format="boolean"/>
        <attr name="disableContentWhenRefresh" format="boolean"/>
        <attr name="disableContentWhenLoading" format="boolean"/>
        <attr name="fixedHeaderViewId" format="reference"/>
        <attr name="fixedFooterViewId" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SmartRefreshLayout_Layout">
        <attr name="layout_spinnerStyle"/>
        <attr name="layout_backgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="BezierRadarHeader">
        <attr name="primaryColor"/>
        <attr name="accentColor"/>
        <attr name="enableHorizontalDrag"/>
    </declare-styleable>

    <declare-styleable name="BallPulseFooter">
        <attr name="classicsSpinnerStyle"/>
        <attr name="animatingColor" format="color"/>
        <attr name="normalColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ClassicsHeader">
        <attr name="classicsSpinnerStyle"/>
        <attr name="primaryColor"/>
        <attr name="accentColor"/>
        <attr name="finishDuration"/>
        <attr name="drawableArrow"/>
        <attr name="drawableProgress"/>
        <attr name="drawableMarginRight"/>
        <attr name="drawableSize"/>
        <attr name="drawableArrowSize"/>
        <attr name="drawableProgressSize"/>
        <attr name="textSizeTitle"/>
        <attr name="textSizeTime"/>
        <attr name="textTimeMarginTop" format="dimension"/>
        <attr name="enableLastTime" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ClassicsFooter">
        <attr name="classicsSpinnerStyle"/>
        <attr name="primaryColor"/>
        <attr name="accentColor"/>
        <attr name="finishDuration"/>
        <attr name="textSizeTitle"/>
        <attr name="drawableArrow"/>
        <attr name="drawableProgress"/>
        <attr name="drawableMarginRight"/>
        <attr name="drawableSize"/>
        <attr name="drawableArrowSize"/>
        <attr name="drawableProgressSize"/>
    </declare-styleable>

    <declare-styleable name="TwoLevelHeader">
        <attr name="maxRage" format="float"/>
        <attr name="floorRage" format="float"/>
        <attr name="refreshRage" format="float"/>
        <attr name="floorDuration" format="integer"/>
        <attr name="enableTwoLevel" format="boolean"/>
        <attr name="enablePullToCloseTwoLevel" format="boolean"/>
    </declare-styleable>

</resources>