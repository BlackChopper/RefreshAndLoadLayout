<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.aliletter.refreshandloadlayout.RefreshAndLoadingLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:refreshEnabled="false">

        <include layout="@layout/include_refreshandloadlayout_refresh" />

        <include layout="@layout/include_recyclerview" />

        <include layout="@layout/include_refreshandloadlayout_load" />

    </com.aliletter.refreshandloadlayout.RefreshAndLoadingLayout>


</LinearLayout>