<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="primaryColor" format="color" />
    <attr name="accentColor" format="color" />
    <attr name="shadowColor" format="color" />
    <attr name="shadowRadius" format="dimension" />
    <declare-styleable name="PhoenixHeader">
        <attr name="primaryColor" />
        <attr name="accentColor" />
    </declare-styleable>

    <declare-styleable name="TaurusHeader">
        <attr name="primaryColor" />
    </declare-styleable>

    <declare-styleable name="WaveSwipeHeader">
        <attr name="primaryColor" />
        <attr name="accentColor" />
        <attr name="shadowColor" />
        <attr name="shadowRadius" />
    </declare-styleable>

    <declare-styleable name="MaterialHeader">
        <attr name="primaryColor" />
        <attr name="shadowColor" />
        <attr name="shadowRadius" />
        <attr name="showBezierWave" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MountainSceneView">
        <attr name="primaryColor" />
        <attr name="viewportHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FunGameView">

        <attr name="maskTextTop" format="string" />
        <attr name="maskTextTopPull" format="string" />
        <attr name="maskTextTopRelease" format="string" />
        <attr name="maskTextBottom" format="string" />
        <attr name="maskTextSizeTop" format="dimension" />
        <attr name="maskTextSizeBottom" format="dimension" />

        <attr name="backColor" format="color" />
        <attr name="leftColor" format="color" />
        <attr name="middleColor" format="color" />
        <attr name="rightColor" format="color" />
        <attr name="textLoading" format="string" />
        <attr name="textLoadingFinished" format="string" />
        <attr name="textLoadingFailed" format="string" />
        <attr name="textGameOver" format="string" />
    </declare-styleable>

    <declare-styleable name="FunGameHitBlockHeader">
        <attr name="blockHorizontalNum" format="integer" />
        <attr name="ballSpeed" format="dimension" />
    </declare-styleable>

    <declare-styleable name="StoreHouseHeader">
        <attr name="text" format="string" />
        <attr name="lineWidth" format="dimension" />
        <attr name="dropHeight" format="dimension" />
        <attr name="enableFadeAnimation" format="boolean" />
    </declare-styleable>


    <declare-styleable name="DropBoxHeader">
        <attr name="drawable1" format="reference" />
        <attr name="drawable2" format="reference" />
        <attr name="drawable3" format="reference" />
    </declare-styleable>

</resources>